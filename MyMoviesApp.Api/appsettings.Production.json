  // "Tmdb" section
  "Tmdb": {
    "ApiKey": "Tmdb__ApiKey"
  },

  // Connection strings
  "ConnectionStrings": {
    "DefaultConnection": "ConnectionStrings__DefaultConnection"
  },

  // "OpenAI" section
  "OpenAI": {
    "ApiKey": "OpenAI__ApiKey"
  }
}
