//appsettingsProduciton.json
{

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  
  // "Jwt" section
  "Jwt": {
    "Key": "Jwt__Key",
    "Issuer": "MyMoviesApp",
    "Audience": "MyMoviesAppUsers"
  },

